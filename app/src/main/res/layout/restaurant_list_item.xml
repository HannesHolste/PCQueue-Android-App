<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/restaurant_card"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="7dp"
        card_view:cardElevation="15sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/restaurantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Restaurant Name"
                android:layout_above="@+id/restaurantWaitTime"
                android:layout_alignParentStart="true"
                android:layout_marginStart="35dp" />

            <TextView
                android:id="@+id/restaurantWaitTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:text="Wait Time"
                android:textSize="20sp"
                android:textColor="#5FEF5A"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/restaurantName" />

            <Button
                android:id="@+id/updateButton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/restaurantName"
                android:background="@android:color/transparent"
                android:text="Update Wait Time"
                style="?android:attr/borderlessButtonStyle"
                android:drawableLeft="@android:drawable/ic_menu_refresh"
                android:textColor="#78A2D8"
                >


            </Button>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>